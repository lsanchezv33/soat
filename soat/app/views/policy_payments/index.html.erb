<div class="page-content">
  <div class="container aligner">
    <div class="row w100">
      <!-- Notice -->â€¨
      <%= render 'layouts/notice' %>

      <div class="pt10 pb10">
        <h3 class="flow-text"> <%= t('panel.policy_payments') %> </h3>
      </div>

      <table class="responsive-table hightlight">
        <thead>
          <tr>
            <th>Card number</th>
            <th>Cardholder</th>
            <th>Expiration date</th>
            <th>Secure code</th>
            <th>Quotes</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @policy_payments.each do |policy_payment| %>
            <tr>
              <td><%= policy_payment.card_number %></td>
              <td><%= policy_payment.cardholder %></td>
              <td><%= policy_payment.expiration_date.strftime('%b, %d %Y %H:%M %p') %></td>
              <td><%= policy_payment.secure_code %></td>
              <td><%= policy_payment.quotes %></td>
              <td><%= link_to 'Show', [@vehicle, policy_payment] %></td>
              <td><%= link_to 'Edit', edit_vehicle_policy_payment_path(@vehicle, policy_payment) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="pt30">
        <%= link_to 'New Policy Payment', new_vehicle_policy_payment_path(@vehicle), class:'btn btn-small' %>
      </div>

    </div>
  </div>

</div>

