<div class="container aligner minh-600">
  <div class="row w100" id="my-signup-screen">
    <div class="col s10 offset-s1 m6 offset-m3 z-depth-2 p20 br4 hoverable mt30">
      <div class="left mb20">
        <h3 class="flow-text mtn">
          <%= t('app.sign_up') %>
        </h3>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class:'col s12') do |f| %>
        <%= render "devise/shared/error_messages" %>

        <div class="input-field col s12 mtn">
          <%= f.text_field :name, autofocus: true, autocomplete: 'off', required: true, class:'validate-field' %>
          <%= f.label :name, t('inputs.name') %>
        </div>

        <div class="input-field col s12 mtn">
          <%= f.text_field :surname, autocomplete: 'off', required: true, class:'validate-field' %>
          <%= f.label :surname, t('inputs.surname') %>
        </div>

        <div class="input-field col s12 mtn">
          <%= f.telephone_field :phone, autocomplete: 'off', required: true, class:'validate-field' %>
          <%= f.label :phone, t('inputs.phone') %>
        </div>

        <div class="input-field col s12 mtn">
          <%= f.email_field :email, autocomplete: "off", required: true, class:'validate-field' %>
          <%= f.label :email, t('inputs.email') %>
          <span class="helper-text" data-error="wrong e-mail" data-success="right"></span>
        </div>

        <div class="input-field col s12 mtn">
          <%= f.select :document_type, document_types.map{|w| [w.humanize, w]}, required: true, class:'validate-field' %>
          <%= f.label :document_type, t('inputs.document_type') %>
        </div>

        <div class="input-field col s12 mtn">
          <%= f.number_field :document_number, autocomplete: 'off', required: true, class:'validate-field' %>
          <%= f.label :document_number, t('inputs.document_number') %>
        </div>

        <div class="input-field col s12 mt10">
          <%= f.password_field :password, autocomplete: "off", required: true, class:'validate-field mbn' %>
          <%= f.label :password, t('inputs.password') %>
          <span class="fs11">
            (<%= @minimum_password_length %> <%= t('validations.minimum_length') %>)
          </span>
        </div>

        <div class="input-field col s12 mtn">
          <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class:'validate-field' %>
          <%= f.label :password_confirmation, t('inputs.password_confirmation') %>
        </div>

        <div class="col s6 pt20 pb10">
          <%= f.button :submit, class:'btn left waves-effect teal lighten-2' do %>
            <span class="white-text">
              <%= t('app.sign_up') %>
            </span>
          <% end %>
        </div>

        <div class="col s6 pt20 pb10">
          <%= link_to new_user_session_path, class:'btn right waves-effect teal lighten-2' do %>
            <span class="white-text">
              <%= t('app.log_in') %>
            </span>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>
