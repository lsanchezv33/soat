<div class="page-content">
  <div class="container aligner">
    <div class="row w100">
      <!-- Notice -->â€¨
      <%= render 'layouts/notice' %>

      <div class="pt10 pb10">
        <h3 class="flow-text"> <%= t('panel.vehicles') %> </h3>
      </div>

      <table class="responsive-table hightlight">
        <thead>
          <tr>
            <th>License plate</th>
            <th>Age</th>
            <th>Pger number</th>
            <th>Car cylinder</th>
            <th>Tons</th>
            <th>Trade charge</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @vehicles.each do |vehicle| %>
            <tr>
              <td><%= vehicle.license_plate %></td>
              <td><%= vehicle.age %></td>
              <td><%= vehicle.passenger_number %></td>
              <td><%= vehicle.car_cylinder %></td>
              <td><%= vehicle.tons %></td>
              <td><%= vehicle.trade_charge.basic_info %></td>
              <td><%= link_to 'Show', [@user, vehicle] %></td>
              <td><%= link_to 'Edit', edit_user_vehicle_path(vehicle, @user) %></td>
              <td><%= link_to 'SOAT', vehicle_policy_payments_path(vehicle) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="pt30">
        <%= link_to t('forms.new', resource:'Vehicle'), new_user_vehicle_path(@user), class:'btn btn-small' %>
      </div>

    </div>
  </div>

</div>

